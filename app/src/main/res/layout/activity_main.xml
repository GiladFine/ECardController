<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="3"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:id="@+id/button3"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="68dp"
            android:layout_marginRight="68dp"
            app:layout_constraintEnd_toStartOf="@+id/button4"
            app:layout_constraintVertical_bias="0.251"
            app:layout_constraintTop_toBottomOf="@+id/button1"
    />
    <Button
            android:text="2"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:id="@+id/button2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="68dp"
            android:layout_marginRight="68dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.34"
            app:layout_constraintBottom_toTopOf="@+id/button4"/>
    <Button
            android:text="1"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:id="@+id/button1" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="68dp"
            android:layout_marginRight="68dp"
            app:layout_constraintVertical_bias="0.34"
            app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintBottom_toTopOf="@+id/button3"/>
    <Button
            android:text="4
"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:id="@+id/button4"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="68dp"
            android:layout_marginRight="68dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.25"
            app:layout_constraintTop_toBottomOf="@+id/button2"/>
    <ImageButton
            android:rotation="-90"
            android:layout_width="100dp"
            android:layout_height="80dp" app:srcCompat="@android:drawable/arrow_up_float"
            android:id="@+id/leftButton"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="68dp"
            android:layout_marginStart="68dp"/>
    <ImageButton
            android:rotation="90"
            android:layout_width="100dp"
            android:layout_height="80dp" app:srcCompat="@android:drawable/arrow_up_float"
            android:id="@+id/rightButton"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/leftButton" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.501"
            app:layout_constraintEnd_toStartOf="@+id/button3" android:layout_marginEnd="68dp"
            android:layout_marginRight="68dp"/>
</android.support.constraint.ConstraintLayout>