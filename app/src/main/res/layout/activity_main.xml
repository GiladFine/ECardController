<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent" android:layout_width="match_parent"
        android:orientation="vertical" android:id="@+id/mainLayout">
    <LinearLayout android:layout_weight="1" android:layout_width="match_parent" android:layout_height="match_parent">
        <HorizontalScrollView android:layout_width="match_parent"
                              android:layout_height="match_parent">
            <LinearLayout
                    android:layout_height="match_parent" android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/cardsLayout">
            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            tools:context=".MainActivity" android:id="@+id/buttonsLayout">
        <Button
                android:text="1"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/button1"
                tools:layout_editor_absoluteY="321dp"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/button2"/>
        <Button
                android:text="2"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/button2"
                tools:layout_editor_absoluteY="321dp" app:layout_constraintStart_toEndOf="@+id/button1"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.5"
                />
    </LinearLayout>
</LinearLayout>
